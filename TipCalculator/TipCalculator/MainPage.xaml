<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TipCalculator.MainPage">

    <StackLayout 
     Padding="20"
     Spacing=" 20">

        <Label 
            Text="calculadora de propinas" 
            FontSize="Large"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            Margin="0,0,0,10"/>

        <Grid 
            RowDefinitions="Auto,Auto,Auto"
            ColumnDefinitions="*,2*"
            RowSpacing="10"
            ColumnSpacing="10"/>

        <Label 
            Grid.Row="0" 
            Grid.Column="0"
             Text="importe de consumo"
            VerticalOptions="Center"/>

        <Entry 
            Grid.Row="0" 
            Grid.Column="1"
            Placeholder="dato 1"
            x:Name="Entry"/>

        <Label 
            Grid.Row="2"
            Grid.Column="0"
            Text="numero de pesonas:" 
            VerticalOptions="Center"/>

        <Entry 
            Grid.Row="0" 
            Grid.Column="1"
            Placeholder="dato 2"
            x:Name="x"/>

        <Label 
            Grid.Row="2"
            Grid.Column="0"
            Text="Resultado:" 
            VerticalOptions="Center"
            FontAttributes="Bold"/>

        <Label 
            Grid.Row="2"
            Grid.Column="1"
            Text="Resultado:" 
            VerticalOptions="Center"/>

        </Grid>

        <StackLayout 
            Orientation="Horizontal"
            HorizontalOptions="Center"
            Spacing="20"
            Margin="0,10,0,0"/>

        <Button
             Text="procesar"
             Clicked="ProcessButtonClicked"/>
        <Button
            Text="limpiar"
            Clicked="ClearButtonClicked"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
